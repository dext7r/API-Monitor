{
    "manifest_version": 3,
    "name": "API Monitor 2FA",
    "version": "1.0.0",
    "description": "自动检测并填充 2FA 验证码",
    "permissions": [
        "activeTab",
        "storage"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_title": "2FA 验证码",
        "default_icon": {
            "16": "icons/icon128.png",
            "48": "icons/icon128.png",
            "128": "icons/icon128.png"
        }
    },
    "icons": {
        "16": "icons/icon128.png",
        "48": "icons/icon128.png",
        "128": "icons/icon128.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "content.css"
            ],
            "run_at": "document_idle"
        }
    ],
    "options_page": "options.html"
}